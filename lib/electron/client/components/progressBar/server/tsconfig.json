{
  "compilerOptions": {
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "sourceMap": false,
    "strict": true,
    "target": "es5",
    // 添加以下配置来解决模块系统问题
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "index.ts"
  ],
  "exclude": [
    "node_modules",
    "umi"
  ]
}